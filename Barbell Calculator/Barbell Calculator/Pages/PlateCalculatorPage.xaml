<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Barbell_Calculator.Pages.PlateCalculatorPage"
             Title="Calculate">
    <ContentPage.Content>
        <StackLayout>
            <Entry 
                x:Name="BarbellWeightInputEntry"
                Placeholder="Total weight"
                Keyboard="Numeric" 
                ReturnType="Go"
                TextChanged="OnInputWeightChanged"
                Focused="ClearText"/>
            <Label 
                x:Name="PlateOutputText"
                HorizontalOptions="Center"
                FontSize="Large" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>